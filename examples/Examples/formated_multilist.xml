<?xml version="1.0" encoding="UTF-8"?>
<!-- Multi List Example
–––––––––––––––––––––––––––––––––––––––––––––––––– -->
<!-- When the content needs to be split into multiple lists, lists are put into seperate dividers -->
<!-- The total number of columns used must add up to twelve (e.g. six + two + four = twelve) -->
<!-- The section div class styles the lists into dividers with rounded corners and appropriate margins -->
<!-- Available colors are red, green, blue, orange, yellow, pink, salmon, and lightblue -->
<content>
    <section color='red'>
        <sectiontitle>Title</sectiontitle>
        <data type='ulist'>
            <item>List item 1</item>
            <item>List item 2
                <data type='olist'>
                    <item>Sublist item 1</item>
                    <item>Sublist item 2</item>
                    <item>Sublist item 3</item>
                </data>
            </item>
            <item>List item 3</item>
        </data>
    </section>
    <section title='Title' color='green'>
        <data type='ulist'>
            <item>List item 1</listitem>
            <item>List item 2</listitem>
            <item>List item 3</listitem>
        </data>
    </section>
</content>