<?xml version="1.0" encoding="UTF-8"?>
<!-- Single Table Example
–––––––––––––––––––––––––––––––––––––––––––––––––– -->
<!-- multitables follow the same divider rules as multi-lists -->
<content>
    <section title='Title' color='salmon'>
        <data type='table'>
            <head>
                <row>
                    <item>Column A</item>
                    <item>Column B</item>
                    <item>Column C</item>
                </row>
            </head>
            <body>
                <row>
                    <item>A - Row 1</item>
                    <item>B - Row 1</item>
                    <item>C - Row 1</item>
                </row>
                <row>
                    <item>A - Row 2</item>
                    <item>B - Row 2</item>
                    <item>C - Row 2</item>
                </row>
                <row>
                    <item>A - Row 3</item>
                    <item>B - Row 3</item>
                    <item>C - Row 3</item>
                </row>
            </body>
        </data>
    </section>
</content>