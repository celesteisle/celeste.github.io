<!-- Single Table Example
–––––––––––––––––––––––––––––––––––––––––––––––––– -->
<!-- multitables follow the same divider rules as multi-lists -->
<content>
    <section title='Weapon'>
        <data type='table'>
            <head/>
            <body>
                <row>
                    <item>Dmg(S)</item>
                    <item>Dmg(M)</item>
                    <item>Type</item>
                    <item>Crit</item>
                </row>
                <row>
                    <item>Special</item>
                    <item>Cost</item>
                    <item>Weight</item>
                    <item>Range</item>
                </row>
            </body>
        </data>
    </section>
    <section title='Longspear'>
        <data type='table'>
            <head/>
            <body>
                <row>
                    <item>1d6</item>
                    <item>1d8</item>
                    <item>Pierce</item>
                    <item>x3</item>
                </row>
                <row>
                    <item>Reach</item>
                    <item>5 gp</item>
                    <item>9 lb.</item>
                    <item>-</item>
                </row>
            </body>
        </data>
    </section>
    <section title='QuarterStaff'>
        <data type='table'>
            <head/>
            <body>
                <row>
                    <item>1d4</item>
                    <item>1d6</item>
                    <item>Bludge</item>
                    <item>x2</item>
                </row>
                <row>
                    <item>-</item>
                    <item>1 gp</item>
                    <item>4 lb.</item>
                    <item>-</item>
                </row>
            </body>
        </data>
    </section>
    <section title='Spear'>
        <data type='table'>
            <head/>
            <body>
                <row>
                    <item>1d6</item>
                    <item>1d8</item>
                    <item>Pierce</item>
                    <item>x3</item>
                </row>
                <row>
                    <item>-</item>
                    <item>2 gp</item>
                    <item>3 lb.</item>
                    <item>20 ft.</item>
                </row>
            </body>
        </data>
    </section>
</content>