<?xml version="1.0" encoding="UTF-8"?>
<!-- Single Table Example
–––––––––––––––––––––––––––––––––––––––––––––––––– -->
<!-- multitables follow the same divider rules as multi-lists -->
<content>
    <section title='Simple One-Handed Weapons' width='11'>
        <data type='table'>
            <head>
                <row>
                    <item><h5>Name</h5></item>
                    <item>Special</item>
                    <item>Dmg Type</item>
                </row>
                <row>
                    <item>Dmg(S)</item>
                    <item>Dmg(M)</item>
                    <item>Crit</item>
                </row>
                <row>
                    <item>Cost</item>
                    <item>Weight</item>
                    <item>Range inc.</item>
                </row>
            </head>
            <body>
                <!-- Dagger -->
                <row>
                    <item><h7>Dagger</h7></item>
                    <item>Finesse,&#13;&#10;Light</item>
                    <item>Slashing&#13;&#10;Piercing</item>
                    
                </row>
                <row>
                    <item>1d3</item>
                    <item>1d4</item>
                    <item>19+/x2</item>
                </row>
                <row>
                    <item>2 gp</item>
                    <item>1 lb.</item>
                    <item>10 ft.</item>
                </row>
                
                <!-- Spiked Gauntlet -->
                <row>
                    <item><h7>Spiked&#13;&#10;Gauntlet</h7></item>
                    <item>Light</item>
                    <item>1d3</item>
                    <item>1d4</item>
                    <item>x2</item>
                    <item>Piercing</item>
                    <item>-</item>
                    <item>5 gp</item>
                    <item>1 lb.</item>
                </row>
                <row>
                    <item>Sickle</item>
                    <item>Light</item>
                    <item>1d4</item>
                    <item>1d6</item>
                    <item>x2</item>
                    <item>Slashing</item>
                    <item>-</item>
                    <item>6 gp</item>
                    <item>2 lb.</item>
                </row>
                <row>
                    <item>Club</item>
                    <item>-</item>
                    <item>1d4</item>
                    <item>1d6</item>
                    <item>x2</item>
                    <item>Bludgeoning</item>
                    <item>10 ft.</item>
                    <item>1 gp</item>
                    <item>3 lb.</item>
                </row>
                <row>
                    <item>Mace</item>
                    <item>-</item>
                    <item>1d6</item>
                    <item>1d8</item>
                    <item>x2</item>
                    <item>Bludgeoning</item>
                    <item>-</item>
                    <item>12 gp</item>
                    <item>8 lb.</item>
                </row>
                <row>
                    <item>Shortspear</item>
                    <item>-</item>
                    <item>1d4</item>
                    <item>1d6</item>
                    <item>x2</item>
                    <item>Piercing</item>
                    <item>20 ft.</item>
                    <item>1 gp</item>
                    <item>8 lb.</item>
                </row>
            </body>
        </data>
    </section>
</content>